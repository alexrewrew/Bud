@import '../../utilities/vars'
@import '../../utilities/mixins'

h1
  font(3.50rem, $white, bold, 1)
  margin-bottom 30px
  letter-spacing: 2.4px;
  text-align center
  +mobile()
    font-size 2.25rem
    margin-bottom 30px


h3
  font(1.25rem, $white, 400, 1)
  margin-bottom 35px
  letter-spacing: 1.7px;

  text-align center

  text-transform uppercase

  +mobile()
    margin-bottom 30px
    font-size 1rem
    line-height 1.5

p
  font-size $s16
  line-height: 1.5;
  letter-spacing: 1px;
  color $white
  font-weight 400
  font-family 'Gotham Pro', sans-serif
  margin-bottom 25px
  text-align center
  +tablet()
    font-size $s14
  +portrait()
    font-size $s14
  +mobile()
    font-size $s12
