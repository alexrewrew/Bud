@import "../../utilities/vars"
@import "../../utilities/mixins"

button
  border none
  cursor pointer
  transitions()
  &:focus
    outline none

.button
  display block
  max-width 263px
  width 100%
  text-align center

  background $white
  color $black

  padding-top: 16px;
  padding-bottom: 16px;

  font-size: $s20
  font-weight: bold;
  line-height: 0.8;
  letter-spacing: 1.3px;
  margin 0 auto

  &:hover
    color $black
    background $gray